
#################################
#             Corners           #
#################################
# requires: https://github.com/sdhand/compton
corner-radius = 8.0;
round-borders = 1;

rounded-corners-exclude = [
    "class_g = 'Polybar'",
    #"class_g = 'Dunst'",
    "class_g = 'Dmenu'",
    "class_g = 'tint2'",
    "class_g = 'tray'"
]

#################################
#             Shadows           #
#################################

shadow = true;
shadow-radius = 15;
shadow-opacity = .5;
shadow-offset-x = -22;
shadow-offset-y = -19;

shadow-exclude = [
#"name='polybar-base_VGA1'",
#"class_g='Polybar'",
#"!focused",
"class_g='rofi'",
"class_g = 'polybar'", 
"name = 'tray;"
]
backend ="glx";
experimental-backends = true;

active-opacity = 10;
frame-opacity = 0.8;
inactive-opacity-override = false;
# corner-radius = 5;
blur-background = true;
blur-background-frame = true;
blur-background-fixed = true;
blur-background-exclude = [
    "window_type = 'dock'",
    "window_type = 'desktop'"
];
blur-kern = "3x3box";
blur-method = "dual_kawase";
blur-strength = 5;
opacity-rule = [
  "100:class_g = 'kitty'"
];



shadow-exclude = [
    "class_g = 'bar'",
    "class_g = 'lemonbar'",
    "class_g = 'firefox'",
];
#shadow-ignore-shaped = false;
detect-rounded-corners = true;
